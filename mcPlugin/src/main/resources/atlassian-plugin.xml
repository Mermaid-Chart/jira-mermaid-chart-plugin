<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/mermaid-icon-16.png</param>
    <param name="plugin-logo">images/mermaid-icon-32.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="mcPlugin"/>
  <!-- add our web resources -->
  <web-resource key="mcPlugin-resources" name="mcPlugin Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="mcPlugin.css" location="/css/mcPlugin.css"/>
    <resource type="download" name="mcPlugin.js" location="/js/mcPlugin.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>mcPlugin</context>
  </web-resource>
  <web-item name="mcPlugin" i18n-name-key="mc-plugin.name" key="mc-plugin" section="my-item-link/my-section" weight="1000">
    <description key="mc-plugin.description">The mcPlugin Plugin</description>
    <label key="mc-plugin.label"/>
    <link linkId="mc-plugin-link">http://developer.atlassian.com/docs</link>
  </web-item>
  <web-section name="mySection" i18n-name-key="my-section.name" key="my-section" location="my-item-link" weight="1000">
    <description key="my-section.description">The mySection Plugin</description>
  </web-section>
  <web-item name="myItem" i18n-name-key="my-item.name" key="my-item" section="systen.top.navigation.bar" weight="1000">
    <description key="my-item.description">The myItem Plugin</description>
    <label key="my-item.label"/>
    <link linkId="my-item-link"/>
  </web-item>
  <adminPage key="plugin-admin" name="Plugin Administration" i18n-name-key="plugin-admin.name">
    <description key="plugin-admin.description">Plugin Administration</description>
    <resource type="velocity" name="view" location="/templates/admin.vm"/>
  </adminPage>

  <web-item name="My Plugin Settings" i18n-name-key="my-plugin-settings.name" key="my-plugin-settings" section="system.admin/globalsettings" weight="1000">
      <description key="my-plugin-settings.description">My Plugin Settings</description>
      <label key="Mermaid Chart Plugin Settings">My Plugin Settings</label>
      <link linkId="my-plugin-settings-link">/plugins/servlet/my-plugin/configuration</link>
  </web-item>

  <servlet name="My Plugin Configuration" i18n-name-key="my-plugin-configuration.name" key="my-plugin-configuration" class="com.atlassian.tutorial.mcPlugin.config.MyPluginConfigurationServlet">
      <description key="my-plugin-configuration.description">The Plugin Configuration Page</description>
      <url-pattern>/config</url-pattern>
  </servlet>

  -->

</atlassian-plugin>
